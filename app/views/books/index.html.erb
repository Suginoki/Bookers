<h1>Books</h1>
<% Book.all.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
  </tr>
<% end %>

<h1>New Book</h1>

<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <font color = "#ff0000">error!:</font>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
